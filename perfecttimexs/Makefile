ARCHS = arm64 arm64e
include $(THEOS)/makefiles/common.mk

BUNDLE_NAME = PerfectTimeXS
PerfectTimeXS_FILES = $(wildcard *.m)
PerfectTimeXS_INSTALL_PATH = /Library/PreferenceBundles
PerfectTimeXS_FRAMEWORKS = UIKit
PerfectTimeXS_PRIVATE_FRAMEWORKS = Preferences
include $(THEOS_MAKE_PATH)/bundle.mk

internal-stage::
	$(ECHO_NOTHING)mkdir -p $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences$(ECHO_END)
	$(ECHO_NOTHING)cp entry.plist $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences/PerfectTimeXS.plist$(ECHO_END)
